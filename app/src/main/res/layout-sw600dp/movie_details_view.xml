<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/movie_details_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">


            <!-- Layer 0 -->
            <ImageView
                android:id="@+id/movie_details_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/movie_backdrop_content_description"
                android:elevation="0dip"
                android:scaleType="centerCrop" />


            <!-- Layer 1 -->
            <android.support.design.widget.AppBarLayout
                android:id="@+id/movie_details_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/movie_details_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="0dp"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </android.support.design.widget.AppBarLayout>


            <android.support.v4.widget.NestedScrollView
                android:id="@+id/movie_details_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dip"
                app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
                <!-- Content -->
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="900dp">

                    <TextView
                        android:id="@+id/movie_details_runtime_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:elevation="5dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="18sp"
                        app:layout_constraintHorizontal_bias="0.15"
                        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
                        app:layout_constraintRight_toRightOf="@+id/movie_details_content_card"
                        app:layout_constraintTop_toTopOf="@+id/quick_look_top_guide" />

                    <TextView
                        android:id="@+id/movie_details_runtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:text="@string/movie_details_runtime"
                        android:textSize="19sp"
                        android:textStyle="normal|bold"
                        app:layout_constraintHorizontal_bias="0.15"
                        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
                        app:layout_constraintRight_toRightOf="@+id/movie_details_content_card"
                        app:layout_constraintTop_toBottomOf="@+id/movie_details_runtime_title" />


                    <TextView
                        android:id="@+id/movie_details_vote_average_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:elevation="5dp"
                        android:text="@string/movie_details_vote_average"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
                        app:layout_constraintRight_toRightOf="@+id/movie_details_content_card"
                        app:layout_constraintTop_toTopOf="@+id/quick_look_top_guide" />

                    <TextView
                        android:id="@+id/movie_details_vote_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:textSize="19sp"
                        android:textStyle="normal|bold"
                        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
                        app:layout_constraintRight_toRightOf="@+id/movie_details_content_card"
                        app:layout_constraintTop_toBottomOf="@+id/movie_details_vote_average_title" />

                    <TextView
                        android:id="@+id/movie_details_popularity_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:elevation="5dp"
                        android:text="@string/movie_details_popular"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="18sp"
                        app:layout_constraintHorizontal_bias="0.85"
                        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
                        app:layout_constraintRight_toRightOf="@+id/movie_details_content_card"
                        app:layout_constraintTop_toTopOf="@+id/quick_look_top_guide" />

                    <TextView
                        android:id="@+id/movie_details_popularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:textSize="19sp"
                        android:textStyle="normal|bold"
                        app:layout_constraintHorizontal_bias="0.85"
                        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
                        app:layout_constraintRight_toRightOf="@+id/movie_details_content_card"
                        app:layout_constraintTop_toBottomOf="@+id/movie_details_vote_average_title" />


                    <TextView
                        android:id="@+id/movie_details_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="16dp"
                        android:elevation="3dp"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toRightOf="@+id/movie_details_poster"
                        app:layout_constraintRight_toLeftOf="@+id/fab_guide"
                        app:layout_constraintTop_toBottomOf="@+id/movie_details_tagline" />

                    <TextView
                        android:id="@+id/movie_details_tagline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="24dp"
                        android:elevation="3dp"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textSize="26sp"
                        android:textStyle="normal|bold"
                        app:layout_constraintLeft_toRightOf="@+id/movie_details_poster"
                        app:layout_constraintRight_toLeftOf="@+id/fab_guide"
                        app:layout_constraintTop_toBottomOf="@+id/movie_details_quick_look_bar" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/movie_details_quick_look_bar"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="?attr/colorAccent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="4dp"
                        app:layout_constraintBottom_toTopOf="@+id/quick_look_bottom_guide"
                        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/quick_look_top_guide" />

                    <TextView
                        android:id="@+id/movie_details_genres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="38dp"
                        android:elevation="3dp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="24sp"
                        android:textStyle="normal|italic"
                        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
                        app:layout_constraintTop_toBottomOf="@+id/movie_details_date" />

                    <TextView
                        android:id="@+id/movie_details_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="24sp"
                        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
                        app:layout_constraintTop_toBottomOf="@+id/movie_details_title" />

                    <TextView
                        android:id="@+id/movie_details_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="38dp"
                        android:elevation="3dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Large"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="40sp"
                        android:textStyle="normal|bold"
                        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
                        app:layout_constraintTop_toTopOf="@+id/content_card_guide" />

                    <ImageView
                        android:id="@+id/movie_details_poster"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:contentDescription="@string/movie_poster_content_description"
                        android:elevation="4dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toTopOf="@+id/poster_bottom_guide"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="@+id/poster_start_guide"
                        app:layout_constraintRight_toLeftOf="@+id/poster_end_guide"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/movie_details_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:fabSize="normal"
                        app:layout_constraintBottom_toTopOf="@+id/content_card_guide"
                        app:layout_constraintRight_toLeftOf="@+id/fab_guide"
                        app:layout_constraintTop_toTopOf="@+id/content_card_guide"
                        app:srcCompat="@drawable/heart_unselected" />

                    <android.support.constraint.Guideline
                        android:id="@+id/content_card_guide"
                        android:layout_width="1024dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="66dp"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="66dp" />

                    <android.support.constraint.Guideline
                        android:id="@+id/poster_start_guide"
                        android:layout_width="0dp"
                        android:layout_height="900dp"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="33dp"
                        tools:layout_editor_absoluteX="33dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <android.support.constraint.Guideline
                        android:id="@+id/poster_end_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="900dp"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="295dp"
                        tools:layout_editor_absoluteX="295dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <android.support.constraint.Guideline
                        android:id="@+id/poster_bottom_guide"
                        android:layout_width="1024dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="394dp"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="394dp" />

                    <android.support.constraint.Guideline
                        android:id="@+id/fab_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="900dp"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="30dp"
                        tools:layout_editor_absoluteX="994dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <android.support.constraint.Guideline
                        android:id="@+id/quick_look_top_guide"
                        android:layout_width="1024dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="245dp"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="245dp" />

                    <android.support.constraint.Guideline
                        android:id="@+id/quick_look_bottom_guide"
                        android:layout_width="1024dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="308dp"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="308dp" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/movie_details_content_card"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="@color/translucent"
                        app:cardElevation="2dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/content_card_guide"
                        app:layout_constraintVertical_bias="1.0" />
                </android.support.constraint.ConstraintLayout>

            </android.support.v4.widget.NestedScrollView>

        </android.support.design.widget.CoordinatorLayout>

        <RelativeLayout
            android:id="@+id/movie_details_splash_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </FrameLayout>


</layout>