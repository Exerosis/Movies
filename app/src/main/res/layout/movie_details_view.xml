<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <!-- Layer 0 -->

        <!-- Layer 1 -->
        <android.support.design.widget.AppBarLayout
            android:id="@+id/movie_details_app_bar"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@android:color/transparent">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/movie_details_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="4dip"
                    app:layout_collapseMode="pin" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
            <!-- Content -->
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="900dp">

                <TextView
                    android:id="@+id/movie_details_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:elevation="3dp"
                    android:text="@string/description"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="@+id/poster_start_guide"
                    app:layout_constraintRight_toLeftOf="@+id/fab_guide"
                    app:layout_constraintTop_toBottomOf="@+id/movie_details_tagline" />

                <TextView
                    android:id="@+id/movie_details_tagline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="3dp"
                    android:ellipsize="none"
                    android:scrollHorizontally="false"
                    android:text="@string/quote"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    app:layout_constraintLeft_toLeftOf="@+id/poster_start_guide"
                    app:layout_constraintRight_toLeftOf="@+id/fab_guide"
                    app:layout_constraintTop_toBottomOf="@+id/movie_details_quick_look_bar" />

                <TextView
                    android:id="@+id/movie_details_genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:text="@string/tags"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="normal|italic"
                    app:layout_constraintLeft_toLeftOf="@+id/text_start_guide"
                    app:layout_constraintTop_toBottomOf="@+id/movie_details_date" />

                <TextView
                    android:id="@+id/movie_details_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:elevation="3dp"
                    android:text="@string/date"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toLeftOf="@+id/text_start_guide"
                    app:layout_constraintTop_toBottomOf="@+id/movie_details_title" />

                <TextView
                    android:id="@+id/movie_details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:text="@string/title"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="24sp"
                    android:textStyle="normal|bold"
                    app:layout_constraintLeft_toLeftOf="@+id/text_start_guide"
                    app:layout_constraintTop_toTopOf="@+id/text_top_guide" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/movie_details_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:fabSize="normal"
                    app:layout_constraintBottom_toTopOf="@+id/content_card_guide"
                    app:layout_constraintRight_toLeftOf="@+id/fab_guide"
                    app:layout_constraintTop_toTopOf="@+id/content_card_guide"
                    app:srcCompat="@drawable/ic_menu_send" />

                <android.support.constraint.Guideline
                    android:id="@+id/content_card_guide"
                    android:layout_width="384dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="32dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="32dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/poster_start_guide"
                    android:layout_width="0dp"
                    android:layout_height="900dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="17dp"
                    tools:layout_editor_absoluteX="17dp"
                    tools:layout_editor_absoluteY="0dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/poster_end_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="900dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="121dp"
                    tools:layout_editor_absoluteX="121dp"
                    tools:layout_editor_absoluteY="0dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/poster_bottom_guide"
                    android:layout_width="384dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="154dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="154dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/quick_look_bottom_guide"
                    android:layout_width="384dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="239dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="239dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/quick_look_top_guide"
                    android:layout_width="384dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="188dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="188dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/fab_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="11dp"
                    tools:layout_editor_absoluteX="373dp"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageView
                    android:id="@+id/movie_details_poster"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:elevation="4dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@+id/poster_bottom_guide"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toLeftOf="@+id/poster_start_guide"
                    app:layout_constraintRight_toLeftOf="@+id/poster_end_guide"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/image" />

                <android.support.v7.widget.CardView
                    android:id="@+id/movie_details_quick_look_bar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="?attr/colorAccent"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="4dp"
                    app:layout_constraintBottom_toTopOf="@+id/quick_look_bottom_guide"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/quick_look_top_guide" />

                <android.support.constraint.Guideline
                    android:id="@+id/text_top_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="67dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="67dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/text_start_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="137dp"
                    tools:layout_editor_absoluteX="137dp"
                    tools:layout_editor_absoluteY="0dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/movie_details_content_card"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardElevation="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/content_card_guide"
                    app:layout_constraintVertical_bias="1.0"
                    app:cardBackgroundColor="@color/translucent" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v4.widget.NestedScrollView>

        <ImageView
            android:id="@+id/movie_details_backdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/image" />

    </android.support.design.widget.CoordinatorLayout>
</layout>