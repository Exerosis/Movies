<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/movie_details_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="3dp"
        android:text="@string/description"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/fab_guide"
        app:layout_constraintTop_toBottomOf="@+id/movie_details_tagline"
        app:layout_constraintLeft_toRightOf="@+id/movie_details_poster"
        android:layout_marginStart="38dp" />

    <TextView
        android:id="@+id/movie_details_tagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:elevation="3dp"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:text="@string/quote"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textSize="26sp"
        android:textStyle="normal|bold"
        app:layout_constraintRight_toLeftOf="@+id/fab_guide"
        app:layout_constraintTop_toBottomOf="@+id/movie_details_quick_look_bar"
        app:layout_constraintLeft_toRightOf="@+id/movie_details_poster"
        android:layout_marginStart="38dp"
        android:singleLine="false" />

    <android.support.v7.widget.CardView
        android:id="@+id/movie_details_quick_look_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="?attr/colorAccent"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/quick_look_bottom_guide"
        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/quick_look_top_guide" />

    <TextView
        android:id="@+id/movie_details_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:text="@string/tags"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="24sp"
        android:textStyle="normal|italic"
        app:layout_constraintTop_toBottomOf="@+id/movie_details_date"
        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
        android:layout_marginStart="38dp" />

    <TextView
        android:id="@+id/movie_details_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:elevation="3dp"
        android:text="@string/date"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/movie_details_title"
        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
        android:layout_marginStart="38dp" />

    <TextView
        android:id="@+id/movie_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:text="@string/title"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        app:layout_constraintTop_toTopOf="@+id/content_card_guide"
        app:layout_constraintLeft_toLeftOf="@+id/poster_end_guide"
        android:layout_marginStart="38dp"
        android:layout_marginTop="38dp" />

    <ImageView
        android:id="@+id/movie_details_poster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/poster_bottom_guide"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/poster_start_guide"
        app:layout_constraintRight_toLeftOf="@+id/poster_end_guide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/image" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/movie_details_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/content_card_guide"
        app:layout_constraintRight_toLeftOf="@+id/fab_guide"
        app:layout_constraintTop_toTopOf="@+id/content_card_guide"
        app:srcCompat="@drawable/ic_menu_send" />

    <android.support.constraint.Guideline
        android:layout_width="1024dp"
        android:layout_height="0dp"
        android:id="@+id/content_card_guide"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="66dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_begin="66dp" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="695dp"
        android:id="@+id/poster_start_guide"
        app:layout_constraintGuide_begin="33dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="33dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="695dp"
        android:id="@+id/poster_end_guide"
        app:layout_constraintGuide_begin="295dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="295dp" />

    <android.support.constraint.Guideline
        android:layout_width="1024dp"
        android:layout_height="wrap_content"
        android:id="@+id/poster_bottom_guide"
        app:layout_constraintGuide_begin="394dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="394dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="695dp"
        android:id="@+id/fab_guide"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="994dp"
        app:layout_constraintGuide_end="30dp" />

    <android.support.constraint.Guideline
        android:layout_width="1024dp"
        android:layout_height="wrap_content"
        android:id="@+id/quick_look_top_guide"
        app:layout_constraintGuide_begin="245dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="245dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="1024dp"
        android:layout_height="wrap_content"
        android:id="@+id/quick_look_bottom_guide"
        app:layout_constraintGuide_begin="308dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="308dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/movie_details_content_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/translucent"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/content_card_guide"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>